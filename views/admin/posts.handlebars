<a href="/admin/post/add"><button class="btn btn-success mt-0 ml-0">New Post</button></a>
<h2 class="mt-3">Posts:</h2>
{{#each posts}}
    <div class="card mt-0">
    <div class="card-body">
        <h4>{{title}}</h4>
        <small>{{content}}</small>
        <br>
        <small>{{date}}</small>
        <br>
        <a href="/admin/post-edit/{{_id}}"><button class="btn btn-success mt-3 ml-0">Edit Post</button></a>
        <form action="/admin/post-delete" method="POST">
        <input type="hidden" value="{{_id}}" name="id">
        <button class="btn btn-danger mt-3 ml-0">Delet post</button>
        </form>
    </div>
</div>
{{/each}}